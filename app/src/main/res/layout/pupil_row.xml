<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="20dp">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/pd_img_profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="264dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/image"
        app:civ_border_color="@android:color/background_dark"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="10" />

    <TextView
        android:id="@+id/txt_view_name"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/pd_img_profile_image"
        android:text="TextView"
        android:textAlignment="gravity"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_view_country"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/pd_img_profile_image"
        android:layout_alignStart="@+id/txt_view_name"
        android:paddingTop="10dp"
        android:text="TextView"
        android:textAlignment="gravity"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>
